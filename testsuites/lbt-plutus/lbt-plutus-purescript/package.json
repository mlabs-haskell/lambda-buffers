{
  "name": "lbt-plutus",
  "type": "module",
  "version": "0.1.0",
  "description": "LambdaBuffers Plutus test suite",
  "main": "app/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "spago test",
    "bundle": "spago bundle-module -m Test.Main --to dist/output.js",
    "test-web": "nix -L --keep-failed build .#purescript:lbt-plutus:esbundle-browser && mkdir -p dist && cp result/index.js dist/output.js && BROWSER_RUNTIME=1 webpack serve --static-directory app/"
  },
  "author": "Drazen Popovic",
  "license": "MIT",
  "dependencies": {
    "@mlabs-haskell/ctl-npm-meta": "2.0.0-beta.1"
  },
  "devDependencies": {
    "buffer": "6.0.3",
    "esbuild": "0.18.11",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "esbuild-plugin-wasm": "^1.1.0",
    "node-polyfill-webpack-plugin": "2.0.1",
    "webpack": "5.88.1",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.1"
  },
  "prettier": {
    "arrowParens": "avoid"
  }
}
